<% layout('layouts/app') -%>

<div class="row mb-5">
  <div class="col-6 offset-3">
    <div class="card">
      <img src="<%= place.image %>" alt="<%= place.title %>" class="card-img-top">
      <div class="card-body">
        <h3 class="card-title"><%= place.title %></h3>
        <h6 class="card-text"><%= place.description %></h6>
      </div>
      <ul class="list-group list-group-flush">
        <h6 class="list-group-item"><%= place.location %></h6>
        <h6 class="list-group-item"><%= place.price %></h6>
      </ul>
      <div class="card-body">
        <a href="/places/<%= place._id %>/edit" class="card-link btn btn-warning text-white">Edit</a>
          <form action="/places/<%= place._id %>?_method=DELETE" method="POST" style="display: inline !important">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>  
      </div>
    </div>
  </div>
</div>